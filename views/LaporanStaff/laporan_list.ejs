        // üéØ SOLUSI TERBAIK: Alert Management yang Proper
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert-success, .alert-info');
            
            alerts.forEach(function(alert) {
                let timeoutId;
                let isHovered = false;
                
                // Identifikasi jenis alert
                const isFilterAlert = alert.querySelector('a[href="/laporan"]') !== null;
                
                // Tambahkan close button untuk semua alert
                if (!alert.querySelector('.alert-close-btn')) {
                    const closeBtn = document.createElement('button');
                    closeBtn.type = 'button';
                    closeBtn.className = 'btn-close alert-close-btn';
                    closeBtn.style.cssText = `
                        position: absolute;
                        top: 0.5rem;
                        right: 0.5rem;
                        z-index: 10;
                        background: rgba(255,255,255,0.8);
                        border: none;
                        border-radius: 50%;
                        width: 24px;
                        height: 24px;
                        padding: 0;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        cursor: pointer;
                    `;
                    closeBtn.innerHTML = '&times;';
                    closeBtn.setAttribute('aria-label', 'Close');
                    
                    alert.style.position = 'relative';
                    alert.appendChild(closeBtn);
                    
                    closeBtn.addEventListener('click', function() {
                        hideAlert(alert);
                    });
                }
                
                // Fungsi untuk hide alert dengan proper cleanup
                function hideAlert(alertElement) {
                    // üéØ PENTING: Disable semua interaksi SEBELUM animasi
                    alertElement.style.pointerEvents = 'none';
                    alertElement.style.userSelect = 'none';
                    
                    // Disable semua link dan button di dalam alert
                    const interactiveElements = alertElement.querySelectorAll('a, button, input, select');
                    interactiveElements.forEach(el => {
                        el.style.pointerEvents = 'none';
                        el.setAttribute('tabindex', '-1');
                    });
                    
                    // Animasi fade out
                    alertElement.style.transition = 'all 0.5s ease-out';
                    alertElement.style.opacity = '0';
                    alertElement.style.transform = 'translateY(-10px) scale(0.98)';
                    
                    // Remove dari DOM setelah animasi selesai
                    setTimeout(function() {
                        if (alertElement && alertElement.parentNode) {
                            alertElement.parentNode.removeChild(alertElement);
                        }
                    }, 500);
                }
                
                // Hover pause functionality
                alert.addEventListener('mouseenter', function() {
                    isHovered = true;
                    if (timeoutId) {
                        clearTimeout(timeoutId);
                        timeoutId = null;
                    }
                });
                
                alert.addEventListener('mouseleave', function() {
                    isHovered = false;
                    if (!isFilterAlert) { // Hanya auto-hide untuk non-filter alerts
                        timeoutId = setTimeout(() => hideAlert(alert), 2000);
                    }
                });
                
                // Setup auto-hide berdasarkan jenis alert
                if (isFilterAlert) {
                    // Filter alerts: Persistent sampai user close manual
                    // Tambahkan visual indicator
                    const persistentIcon = document.createElement('small');
                    persistentIcon.className = 'text-muted ms-2';
                    persistentIcon.innerHTML = '<i class="bi bi-pin-angle" title="Klik X untuk menutup"></i>';
                    
                    const alertContent = alert.querySelector('span');
                    if (alertContent) {
                        alertContent.appendChild(persistentIcon);
                    }
                    
                } else {
                    // Regular alerts: Auto-hide setelah 6 detik
                    timeoutId = setTimeout(() => {
                        if (!isHovered) {
                            hideAlert(alert);
                        }
                    }, 6000);
                    
                    // Tambahkan progress bar
                    const progressBar = document.createElement('div');
                    progressBar.style.cssText = `
                        position: absolute;
                        bottom: 0;
                        left: 0;
                        height: 3px;
                        background: rgba(0,0,0,0.2);
                        width: 100%;
                        transform-origin: left;
                        animation: alertProgress 6s linear forwards;
                        pointer-events: none;
                    `;
                    alert.appendChild(progressBar);
                }
            });
        });


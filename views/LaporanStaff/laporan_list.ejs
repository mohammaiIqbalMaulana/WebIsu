            };
            
            sessionStorage.setItem('laporanFilter', JSON.stringify(filterData));
        }

        function loadFilterState() {
            const saved = sessionStorage.getItem('laporanFilter');
            if (saved) {
                const filterData = JSON.parse(saved);
                Object.keys(filterData).forEach(key => {
                    const element = document.getElementById(key);
                    if (element && filterData[key]) {
                        element.value = filterData[key];
                    }
                });
            }
        }

        function forceResetFilter() {
            
            // 1. Reset form secara paksa
            const form = document.getElementById('filterForm');
            if (form) {
                form.reset();
            }
            
            // 2. Reset manual setiap field
            const fieldIds = ['search_judul', 'search_isi', 'pimpinan', 'jenis', 'tanggalDari', 'tanggalSampai'];
            fieldIds.forEach(id => {
                const el = document.getElementById(id);
                if (el) {
                    el.value = '';
                    el.selectedIndex = 0; // untuk select
                }
            });
            
            // 3. Clear ALL possible storage
            sessionStorage.clear();
            localStorage.removeItem('laporanFilter');
            sessionStorage.removeItem('laporanFilter');
            
            // 4. Langsung redirect tanpa delay
            window.location.href = '/laporan';
        }

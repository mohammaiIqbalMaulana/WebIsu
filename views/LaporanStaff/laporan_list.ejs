<body class="bg-light">
    <div class="container-fluid py-4 px-4">
        <!-- Header dengan Tombol Filter -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3>Daftar Laporan</h3>
        </div>
        <div class="d-flex gap-2">
            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#filterModal">
                <i class="bi bi-funnel"></i> Filter
                <% if (hasFilter) { %><span class="badge bg-danger ms-1">!</span><% } %>
            </button>
            <a href="/laporan/tambah" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Tambah
            </a>
            <a href="/laporan/calendar" class="btn btn-outline-primary">
                <i class="bi bi-calendar-range"></i> Clastering
            </a>
        </div>
    </div>
        
        <!-- Info Filter Aktif -->
        <% if (hasFilter) { %>
            <div class="alert alert-info d-flex justify-content-between align-items-center pe-3">
                <span>
                    <i class="bi bi-info-circle me-2"></i>
                    Ditemukan <strong><%= pagination.totalData %></strong> data dengan filter: <strong><%= filterInfo %></strong>
                </span>
                <a href="/laporan" class="btn btn-sm btn-outline-secondary me-4">
                    <i class="bi bi-x-circle"></i> Reset Filter
                </a>
            </div>
        <% } %>

        <!-- Data Per Halaman dan Info -->
        <div class="row mb-3 align-items-center">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="limitSelect" class="form-label">Data Per Halaman</label>
                    <select class="form-select" id="limitSelect" name="limit">
                        <option value="5" <%= pagination.limit == 5 ? 'selected' : '' %>>5</option>
                        <option value="10" <%= pagination.limit == 10 ? 'selected' : '' %>>10</option>
                        <option value="20" <%= pagination.limit == 20 ? 'selected' : '' %>>20</option>
                        <option value="50" <%= pagination.limit == 50 ? 'selected' : '' %>>50</option>
                        <option value="100" <%= pagination.limit == 100 ? 'selected' : '' %>>100</option>
                        <option value="1000" <%= pagination.limit == 1000 ? 'selected' : '' %>>1000</option>
                        <option value="10000" <%= pagination.limit == 10000 ? 'selected' : '' %>>10000</option>
                    </select>
                </div>
            </div>
            <div class="col-md-8">
                <% if (pagination && pagination.totalData > 0) { %>
                <div class="text-end">
                    <small class="text-muted">
                        Menampilkan <strong><%= pagination.startRecord %></strong> sampai
                        <strong><%= pagination.endRecord %></strong> dari
                        <strong><%= pagination.totalData %></strong> data
                        <% if (hasFilter) { %>(dengan filter)<% } %>
                    </small>
                </div>
                <% } %>
            </div>
        </div>

        <!-- Loading Overlay untuk Table -->
        <div id="tableLoading" class="position-relative" style="display: none;">
            <div class="position-absolute w-100 h-100 d-flex justify-content-center align-items-center bg-white bg-opacity-75" style="z-index: 10;">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-2 text-muted">Memuat data...</p>
                </div>
            </div>
        </div>

        <!-- Tabel Data -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered align-middle" id="mainTable">
                <thead class="table-light">
                    <tr>
                        <th>No</th>
                        <th>Jenis</th>
                        <th>Tanggal</th>
                        <th>Judul</th>
                        <th>Pimpinan</th>
                        <th>Jenis Media</th>
                        <th>File</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (!data || data.length === 0) { %>
                        <tr>
                            <td colspan="8" class="text-center text-muted py-5">
                                <% if (hasFilter) { %>
                                    <i class="bi bi-search display-4 d-block mb-3 text-muted"></i>
                                    <h5>Tidak ada data yang sesuai</h5>
                                    <p>Coba ubah kriteria pencarian atau <a href="/laporan">reset filter</a></p>
                                <% } else { %>
                                    <i class="bi bi-inbox display-4 d-block mb-3 text-muted"></i>
                                    <h5>Belum ada data</h5>
                                    <p>Mulai dengan <a href="/laporan/tambah">menambah laporan</a> pertama Anda</p>
                                <% } %>
                            </td>
                        </tr>
                    <% } else { %>
                        <% data.forEach(function(row, i){ %>
                            <tr>
                                <td><%= pagination.startRecord + i %></td>
                                <td>
                                    <span class="badge bg-info">
                                        <%= JENIS_MAP[row.jenis_laporan] || 'Jenis tidak diset' %>
                                    </span>
                                </td>
                                <td>
                                    <% if (row.tanggal_laporan) { %>
                                        <small class="text-muted d-block">
                                            <i class="bi bi-calendar3"></i>
                                            <%= row.tanggal_laporan %>
                                        </small>
                                    <% } else { %>
                                        <small class="text-muted">-</small>
                                    <% } %>
                                </td>
                                <td>
                                    <div>
                                        <strong class="d-block mb-1"><%= row.judul %></strong>
                                        <button class="btn btn-sm btn-outline-info" data-bs-toggle="modal"
                                                data-bs-target="#viewModal<%= row.id %>" title="Lihat Uraian">
                                            <i class="bi bi-eye"></i> Detail
                                        </button>
                                    </div>
                                </td>
                                <td>
                                    <% if (row.nama_pimpinan) { %>
                                        <small class="text-muted">
                                            <i class="bi bi-person-badge"></i>
                                            <%= row.nama_pimpinan %>
                                        </small>
                                    <% } else { %>
                                        <small class="text-muted">-</small>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (row.nama_jenis) { %>
                                        <small class="text-muted">
                                            <i class="bi bi-tag"></i>
                                            <%= row.nama_jenis %>
                                        </small>
                                    <% } else { %>
                                        <small class="text-muted">-</small>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (row.file_name) { %>
                                        <div class="text-center">
                                            <div class="d-flex align-items-center justify-content-center mb-2">
                                                <% if (row.file_name.toLowerCase().endsWith('.pdf')) { %>
                                                    <i class="bi bi-file-earmark-pdf text-danger me-1"></i>
                                                <% } else if (/\.(jpg|jpeg|png|gif|webp)$/i.test(row.file_name)) { %>
                                                    <i class="bi bi-file-earmark-image text-success me-1"></i>
                                                <% } else { %>
                                                    <i class="bi bi-file-earmark text-primary me-1"></i>
                                                <% } %>
                                                <small class="text-truncate" style="max-width: 100px;" title="<%= row.file_name %>">
                                                    <%= row.file_name %>
                                                </small>
                                            </div>
                                            <small class="d-block text-muted mb-2">
                                                <%= (row.file_size / 1024 / 1024).toFixed(2) %> MB
                                            </small>
                                            <a href="/laporan/download/<%= row.id %>"
                                               class="btn btn-sm btn-success"
                                               title="Download <%= row.file_name %>">
                                                <i class="bi bi-download"></i>
                                            </a>
                                        </div>
                                    <% } else { %>
                                        <div class="text-center">
                                            <small class="text-muted">
                                                <i class="bi bi-dash-circle"></i>
                                                Tidak ada file
                                            </small>
                                        </div>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="/laporan/edit/<%= row.id %>" class="btn btn-sm btn-primary" title="Edit laporan">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button class="btn btn-sm btn-danger" onclick="confirmDelete('<%= row.id %>', '<%= row.judul %>')" title="Hapus laporan">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>

                            <!-- Modal View Uraian - Rich HTML Support -->
                            <div class="modal fade" id="viewModal<%= row.id %>" tabindex="-1">
                                <div class="modal-dialog modal-xl">
                                    <div class="modal-content">
                                        <div class="modal-header bg-primary text-white">
                                            <div>
                                                <h5 class="modal-title mb-1">
                                                    <i class="bi bi-file-text me-2"></i>Detail Uraian Laporan
                                                </h5>
                                                <small class="opacity-75">
                                                    <i class="bi bi-calendar3 me-1"></i><%= row.tanggal_laporan || 'Tanggal tidak diset' %> |
                                                    <i class="bi bi-tag me-1"></i><%= JENIS_MAP[row.jenis_laporan] || 'Jenis tidak diset' %>
                                                    <% if (row.nama_pimpinan) { %> | <i class="bi bi-person-badge me-1"></i><%= row.nama_pimpinan %><% } %>
                                                </small>
                                            </div>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body p-0">
                                            <div class="uraian-content">
                                                <% if (row.isi_laporan && row.isi_laporan.trim() !== '') { %>
                                                    <div class="content-wrapper">
                                                        <h4 class="content-title"><%= row.judul %></h4>
                                                        <div class="formatted-content">
                                                            <%- row.isi_laporan %>
                                                        </div>
                                                    </div>
                                                <% } else { %>
                                                    <div class="empty-content text-center py-5">
                                                        <i class="bi bi-file-text display-1 text-muted mb-3"></i>
                                                        <h5 class="text-muted">Tidak Ada Uraian</h5>
                                                        <p class="text-muted">Laporan ini belum memiliki uraian yang tersedia.</p>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="modal-footer bg-light">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                <i class="bi bi-x-lg me-1"></i>Tutup
                                            </button>
                                                <a href="/laporan/edit/<%= row.id %>" class="btn btn-primary">
                                                    <i class="bi bi-pencil-square me-1"></i>Edit Laporan
                                                </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Pagination (dengan filter support LENGKAP) -->
        <% if (pagination && pagination.totalData > 0) { %>
        <%
        // Helper function untuk build complete query string
        function buildQueryString(excludePage = false) {
            var params = new URLSearchParams();
            if (searchJudul) params.append('search_judul', searchJudul);
            if (searchIsi) params.append('search_isi', searchIsi);
            if (filterPimpinan) params.append('pimpinan', filterPimpinan);
            if (filterJenis) params.append('jenis', filterJenis);
            if (tanggalDari) params.append('tanggal_dari', tanggalDari);
            if (tanggalSampai) params.append('tanggal_sampai', tanggalSampai);
            if (pagination.limit && pagination.limit !== 5) params.append('limit', pagination.limit);
            return params.toString() ? '?' + params.toString() : '';
        }
        %>

        <div class="row mt-4">
            <div class="col-md-12">
                <% if (pagination.totalPages > 1) { %>
                    <nav aria-label="Navigasi halaman laporan">
                        <ul class="pagination justify-content-center mb-0">
                            <!-- Previous Button -->
                            <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                                <% if (pagination.hasPrev) { %>
                                    <% 
                                    var prevPage = pagination.currentPage - 1;
                                    var queryString = buildQueryString();
                                    var prevUrl = prevPage === 1 ? '/laporan' + queryString : '/laporan/page/' + prevPage + queryString;
                                    %>
                                    <a class="page-link" href="<%= prevUrl %>">
                                        <i class="bi bi-chevron-left"></i> Sebelumnya
                                    </a>
                                <% } else { %>
                                    <span class="page-link text-muted">
                                        <i class="bi bi-chevron-left"></i> Sebelumnya
                                    </span>
                                <% } %>
                            </li>

                            <!-- Page Numbers -->
                            <% 
                            var startPage = Math.max(1, pagination.currentPage - 2);
                            var endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
                            if (pagination.currentPage <= 3) {
                                endPage = Math.min(pagination.totalPages, 5);
                            }
                            if (pagination.currentPage >= pagination.totalPages - 2) {
                                startPage = Math.max(1, pagination.totalPages - 4);
                            }
                            %>

                            <!-- First page -->
                            <% if (startPage > 1) { %>
                                <li class="page-item">
                                    <% var queryString = buildQueryString(); %>
                                    <a class="page-link" href="/laporan<%= queryString %>">1</a>
                                </li>
                                <% if (startPage > 2) { %>
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                <% } %>
                            <% } %>

                            <!-- Page Numbers Loop -->
                            <% for (var p = startPage; p <= endPage; p++) { %>
                                <li class="page-item <%= pagination.currentPage === p ? 'active' : '' %>">
                                    <% if (pagination.currentPage === p) { %>
                                        <span class="page-link bg-primary text-white border-primary">
                                            <%= p %>
                                        </span>
                                    <% } else { %>
                                        <% 
                                        var queryString = buildQueryString();
                                        var pageUrl = p === 1 ? '/laporan' + queryString : '/laporan/page/' + p + queryString;
                                        %>
                                        <a class="page-link" href="<%= pageUrl %>">
                                            <%= p %>
                                        </a>
                                    <% } %>
                                </li>
                            <% } %>

                            <!-- Last page -->
                            <% if (endPage < pagination.totalPages) { %>
                                <% if (endPage < pagination.totalPages - 1) { %>
                                    <li class="page-item disabled"><span class="page-link">...</span></li>
                                <% } %>
                                <li class="page-item">
                                    <% var queryString = buildQueryString(); %>
                                    <a class="page-link" href="/laporan/page/<%= pagination.totalPages %><%= queryString %>">
                                        <%= pagination.totalPages %>
                                    </a>
                                </li>
                            <% } %>

                            <!-- Next Button -->
                            <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                                <% if (pagination.hasNext) { %>
                                    <% 
                                    var nextPage = pagination.currentPage + 1;
                                    var queryString = buildQueryString();
                                    var nextUrl = '/laporan/page/' + nextPage + queryString;
                                    %>
                                    <a class="page-link" href="<%= nextUrl %>">
                                        Selanjutnya <i class="bi bi-chevron-right"></i>
                                    </a>
                                <% } else { %>
                                    <span class="page-link text-muted">
                                        Selanjutnya <i class="bi bi-chevron-right"></i>
                                    </span>
                                <% } %>
                            </li>
                        </ul>
                    </nav>
                <% } %>
            </div>
        </div>
        <% } %>
    </div>

    <!-- üéØ MODAL FILTER -->
    <div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <form method="get" action="/laporan" id="filterForm">
                    <div class="modal-header">
                        <h5 class="modal-title" id="filterModalLabel">
                            <i class="bi bi-funnel me-2"></i>Filter & Pencarian
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="search_judul" class="form-label">
                                    <i class="bi bi-card-heading me-1"></i>Judul Laporan
                                </label>
                                <input type="text" class="form-control" id="search_judul" name="search_judul"
                                       value="<%= searchJudul %>" placeholder="Cari berdasarkan judul...">
                                <div class="form-text">Contoh: rapat, covid, kegiatan</div>
                            </div>
                            <div class="col-md-6">
                                <label for="search_isi" class="form-label">
                                    <i class="bi bi-card-text me-1"></i>Isi Laporan
                                </label>
                                <input type="text" class="form-control" id="search_isi" name="search_isi"
                                       value="<%= searchIsi %>" placeholder="Cari berdasarkan isi laporan...">
                                <div class="form-text">Contoh: keuangan, kegiatan, anggaran</div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="pimpinan" class="form-label">
                                    <i class="bi bi-person-badge me-1"></i>Pimpinan
                                </label>
                                <select name="pimpinan" id="pimpinan" class="form-select">
                                    <option value="">Semua Pimpinan</option>
                                    <% pimpinanList.forEach(function(p) { %>
                                        <option value="<%= p.id_pimpinan %>" <%=filterPimpinan===p.id_pimpinan ? 'selected' : '' %>>
                                            <%= p.jabatan_pimpinan %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="jenis" class="form-label">
                                    <i class="bi bi-tags me-1"></i>Jenis Laporan
                                </label>
                                <select name="jenis" id="jenis" class="form-select">
                                    <option value="">Semua Jenis Laporan</option>
                                    <% jenisList.forEach(function(j) { %>
                                        <option value="<%= j.id_jenis %>" <%=filterJenis===j.id_jenis ? 'selected' : '' %>>
                                            <%= JENIS_MAP[j.id_jenis] || j.nama_jenis %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>
                        </div>

                        <hr class="my-3">

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="tanggal_dari" class="form-label">
                                    <i class="bi bi-calendar3 me-1"></i>Tanggal Awal
                                </label>
                                <input type="date" class="form-control" name="tanggal_dari" id="tanggalDari"
                                       value="<%= tanggalDari %>">
                            </div>
                            <div class="col-md-6">
                                <label for="tanggal_sampai" class="form-label">
                                    <i class="bi bi-calendar3 me-1"></i>Tanggal Akhir
                                </label>
                                <input type="date" class="form-control" name="tanggal_sampai" id="tanggalSampai"
                                       value="<%= tanggalSampai %>">
                            </div>
                        </div>

                        <div class="alert alert-light">
                            <i class="bi bi-info-circle me-2"></i>
                            <small>Pencarian berdasarkan judul dan isi akan menampilkan data yang <strong>judulnya ATAU isi laporannya</strong>
                                mengandung kata yang dicari (tidak harus sama persis).</small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" onclick="forceResetFilter()">
                            <i class="bi bi-arrow-clockwise me-1"></i>Reset
                        </button>
                        <button type="submit" class="btn btn-primary" id="filterSubmitBtn">
                            <i class="bi bi-search me-1"></i>Cari
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Konfirmasi Delete -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">
                        <i class="bi bi-exclamation-triangle me-2"></i>Konfirmasi Hapus
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <i class="bi bi-trash3 display-1 text-danger mb-3"></i>
                        <h5>Apakah Anda yakin?</h5>
                        <p class="mb-0">Data yang telah dihapus tidak dapat dikembalikan!</p>
                        <div class="alert alert-warning mt-3">
                            <strong>Laporan:</strong> <span id="deleteItemTitle"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-lg me-1"></i>Batal
                    </button>
                    <a href="#" class="btn btn-danger" id="confirmDeleteBtn">
                        <i class="bi bi-trash me-1"></i>Ya, Hapus!
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast untuk Notifikasi -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="successToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-success text-white">
                <i class="bi bi-check-circle me-2"></i>
                <strong class="me-auto">Berhasil</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body" id="successToastBody">
                Data berhasil diproses!
            </div>
        </div>
        
        <div id="errorToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-danger text-white">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong class="me-auto">Error</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body" id="errorToastBody">
                Terjadi kesalahan!
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('limitSelect').addEventListener('change', function () {
            const selectedLimit = parseInt(this.value);
            
            // Ambil parameter dari template EJS (lebih reliable daripada parsing URL)
            const params = new URLSearchParams();
            
            // Parameter filter dari template
            const searchJudul = '<%= searchJudul %>';
            const searchIsi = '<%= searchIsi %>';
            const filterPimpinan = '<%= filterPimpinan %>';
            const filterJenis = '<%= filterJenis %>';
            const tanggalDari = '<%= tanggalDari %>';
            const tanggalSampai = '<%= tanggalSampai %>';
            
            // Tambahkan parameter yang ada (hanya jika tidak kosong)
            if (searchJudul && searchJudul !== '') params.append('search_judul', searchJudul);
            if (searchIsi && searchIsi !== '') params.append('search_isi', searchIsi);
            if (filterPimpinan && filterPimpinan !== '') params.append('pimpinan', filterPimpinan);
            if (filterJenis && filterJenis !== '') params.append('jenis', filterJenis);
            if (tanggalDari && tanggalDari !== '') params.append('tanggal_dari', tanggalDari);
            if (tanggalSampai && tanggalSampai !== '') params.append('tanggal_sampai', tanggalSampai);
            
            // Tambahkan limit baru
            params.append('limit', selectedLimit);
            
            // Hitung halaman target berdasarkan record saat ini
            const currentStartRecord = parseInt('<%= pagination.startRecord %>') || 1;
            const targetPage = Math.ceil(currentStartRecord / selectedLimit);
            
            // Buat URL target
            let targetUrl = '/laporan';
            if (targetPage > 1) {
                targetUrl += `/page/${targetPage}`;
            }
            
            // Tambahkan query string jika ada parameter
            const queryString = params.toString();
            if (queryString) {
                targetUrl += '?' + queryString;
            }
            
            // Show loading dan navigate
            showTableLoading();
            window.location.href = targetUrl;

                    editor.ui.view.editable.element.focus();

                    // Show error message
                    let errorMsg = document.getElementById('ckEditorError');
                    if (!errorMsg) {
                        errorMsg = document.createElement('div');
                        errorMsg.id = 'ckEditorError';
                        errorMsg.className = 'text-danger mt-2';

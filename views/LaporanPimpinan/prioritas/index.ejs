<div class="container mt-4">
    <h3 class="mb-4">Daftar Isu Prioritas</h3>

    <div class="d-flex gap-2 mb-3">
        <button type="button" class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#filterModal">
            <i class="bi bi-funnel"></i> Filter
            <% if (hasFilter) { %><span class="badge bg-danger ms-1">!</span><% } %>
        </button>
        <a href="/isu-prioritas/create" class="btn btn-warning">
            <i class="bi bi-plus-circle"></i> Tambah Isu Prioritas
        </a>
    </div>

<% if (hasFilter) { %>
    <div class="alert alert-info d-flex justify-content-between align-items-center pe-3">
        <div>
            <i class="bi bi-funnel-fill me-2"></i>
            <strong>Filter Aktif:</strong> Ditemukan <strong><%= pagination.totalData %></strong> data
            <div class="mt-1">
                <% if (tanggalDari || tanggalSampai) { %>
                    <span class="badge bg-success me-1">üìÖ Tanggal</span>
                <% } %>
                <% if (judulSearch) { %>
                    <span class="badge bg-primary me-1">üìù Judul: "<%= judulSearch %>"</span>
                <% } %>
                <% if (uraianSearch) { %>
                    <span class="badge bg-info me-1">üìÑ Uraian: "<%= uraianSearch %>"</span>
                <% } %>
                <% if (kewenanganFilter) { %>
                    <span class="badge bg-warning me-1">üè¢ Kewenangan</span>
                <% } %>
                <% if (stakeholderFilter) { %>
                    <span class="badge bg-secondary me-1">üë• Stakeholder</span>
                <% } %>
            </div>
        </div>
        <a href="/isu-prioritas" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Reset Filter
        </a>
    </div>
<% } %>

    <div class="row mb-3 align-items-center">
        <div class="col-md-4">
            <div class="form-group">
                <label for="limitSelect" class="form-label">Data Per Halaman</label>
                <select class="form-select" id="limitSelect" name="limit">
                    <option value="5" <%= pagination.limit == 5 ? 'selected' : '' %>>5</option>
                    <option value="10" <%= pagination.limit == 10 ? 'selected' : '' %>>10</option>
                    <option value="20" <%= pagination.limit == 20 ? 'selected' : '' %>>20</option>
                    <option value="50" <%= pagination.limit == 50 ? 'selected' : '' %>>50</option>
                    <option value="100" <%= pagination.limit == 100 ? 'selected' : '' %>>100</option>
                </select>
            </div>
        </div>
        <div class="col-md-8">
            <% if (pagination && pagination.totalData > 0) { %>
            <div class="text-end">
                <small class="text-muted">
                    Menampilkan <strong><%= pagination.startRecord %></strong> sampai
                    <strong><%= pagination.endRecord %></strong> dari
                    <strong><%= pagination.totalData %></strong> data
                    <% if (hasFilter) { %>(dengan filter)<% } %>
                </small>
            </div>
            <% } %>
        </div>
    </div>

    <div id="tableLoading" class="position-relative" style="display: none;">
        <div class="position-absolute w-100 h-100 d-flex justify-content-center align-items-center bg-white bg-opacity-75" style="z-index: 10;">
            <div class="text-center">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-2 text-muted">Memuat data...</p>
            </div>
        </div>
    </div>
    
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped align-middle" id="mainTable">
        <thead class="table-dark">
            <tr>
                <th>No</th>
                <th width="25%">Judul</th>
                <th>Tanggal</th>
                <th width="15%">Kewenangan</th>
                <th width="15%">Stakeholder</th>
                <th>Links</th>
                <th width="15%">Files</th>
                <th width="10%">Detail</th>
                <th>Aksi</th>
            </tr>
        </thead>
<tbody>
    <% if (data && data.length > 0) { %>
        <% data.forEach((item, index) => { %>
            <tr>
                <td><%= pagination.startRecord + index %></td>
                <td>
                    <strong class="d-block mb-1"><%= item.judul %></strong>
                </td>
                <td>
                    <small class="text-muted">
                        <i class="bi bi-calendar3"></i>
                        <%= new Date(item.tanggal_laporan).toLocaleDateString('id-ID') %>
                    </small>
                </td>
                <td>
                    <!-- FIXED: Proper kewenangan display -->
                    <% if (item.kewenanganNames && item.kewenanganNames.length > 0) { %>
                        <div class="d-flex flex-wrap gap-1">
                            <% item.kewenanganNames.forEach(name => { %>
                                <span class="badge bg-primary text-wrap" style="font-size: 0.7rem;">
                                    <i class="bi bi-building-gear me-1"></i><%= name %>
                                </span>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <small class="text-muted">
                            <i class="bi bi-dash"></i> Tidak ada
                        </small>
                    <% } %>
                </td>
                <td>
                    <!-- Proper stakeholder display -->
                    <% if (item.stakeholderNames && item.stakeholderNames.length > 0) { %>
                        <div class="d-flex flex-wrap gap-1">
                            <% item.stakeholderNames.forEach(name => { %>
                                <span class="badge bg-success text-wrap" style="font-size: 0.7rem;">
                                    <i class="bi bi-people me-1"></i><%= name %>
                                </span>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <small class="text-muted">
                            <i class="bi bi-dash"></i> Tidak ada
                        </small>
                    <% } %>
                </td>
                <td>
                    <% if (item.links && item.links.length > 0) { %>
                        <div class="d-flex flex-column gap-1">
                            <% item.links.forEach((link, linkIndex) => { %>
                                <% 
                                // Extract domain for display
                                let displayText = '';
                                try {
                                    const url = new URL(link);
                                    displayText = url.hostname.replace('www.', '');
                                    // Truncate if too long
                                    if (displayText.length > 20) {
                                        displayText = displayText.substring(0, 17) + '...';
                                    }
                                } catch {
                                    displayText = link.length > 20 ? link.substring(0, 17) + '...' : link;
                                }
                                %>
                                <a href="<%= link %>" target="_blank" 
                                   class="btn btn-outline-info btn-sm d-flex align-items-center" 
                                   style="font-size: 0.75rem; max-width: 100%; text-align: left;"
                                   title="<%= link %>">
                                    <i class="bi bi-link-45deg me-1 flex-shrink-0"></i>
                                    <span class="text-truncate"><%= displayText %></span>
                                    <i class="bi bi-box-arrow-up-right ms-1 flex-shrink-0" style="font-size: 0.6rem;"></i>
                                </a>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <small class="text-muted">
                            <i class="bi bi-dash"></i> Tidak ada
                        </small>
                    <% } %>
                </td>
                <td>
                    <% if (item.files && item.files.length > 0) { %>
                        <div class="d-flex flex-wrap gap-1">
                            <% if (item.files.length === 1) { %>
                                <!-- Single file -->
                                <a href="/isu-prioritas/download/<%= item.id %>/0" 
                                   class="btn btn-success btn-sm" title="<%= item.files[0].name %>">
                                    <i class="bi bi-download"></i>
                                    <%= item.files[0].name.length > 15 ? item.files[0].name.substring(0, 15) + '...' : item.files[0].name %>
                                </a>
                            <% } else { %>
                                <!-- Multiple files -->
                                <button class="btn btn-info btn-sm" 
                                        data-bs-toggle="modal" data-bs-target="#filesModal<%= item.id %>"
                                        title="Lihat semua file">
                                    <i class="bi bi-files"></i>
                                    <%= item.files.length %> File<%= item.files.length > 1 ? 's' : '' %>
                                </button>
                                <a href="/isu-prioritas/download-all/<%= item.id %>" 
                                   class="btn btn-success btn-sm" title="Download semua file sebagai ZIP">
                                    <i class="bi bi-download"></i> ZIP
                                </a>
                            <% } %>
                        </div>
                    <% } else { %>
                        <small class="text-muted">
                            <i class="bi bi-file-x"></i> No files
                        </small>
                    <% } %>
                </td>
                <td>
                    <button class="btn btn-sm btn-outline-warning" data-bs-toggle="modal"
                            data-bs-target="#viewModal<%= item.id %>" title="Lihat Detail">
                        <i class="bi bi-eye"></i> Detail
                    </button>
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="/isu-prioritas/edit/<%= item.id %>" class="btn btn-warning btn-sm" title="Edit">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a href="/isu-prioritas/delete/<%= item.id %>"
                           onclick="return confirm('Yakin ingin menghapus?')"
                           class="btn btn-danger btn-sm" title="Hapus">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        <% }) %>
    <% } else { %>
        <tr>
            <td colspan="9" class="text-center">Belum ada data</td>
        </tr>
    <% } %>
</tbody>
    </table>
</div>

    <!-- FIXED: Pagination -->
    <% if (pagination && pagination.totalData > 0 && pagination.totalPages > 1) { %>
    <div class="row mt-4">
        <div class="col-md-12">
            <nav aria-label="Navigasi halaman isu prioritas">
                <ul class="pagination justify-content-center mb-0">
                    <!-- Previous Button -->
                    <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                        <% if (pagination.hasPrev && pagination.prevUrl) { %>
                            <a class="page-link" href="<%= pagination.prevUrl %>">
                                <i class="bi bi-chevron-left"></i> Sebelumnya
                            </a>
                        <% } else { %>
                            <span class="page-link text-muted">
                                <i class="bi bi-chevron-left"></i> Sebelumnya
                            </span>
                        <% } %>
                    </li>

                    <!-- Page Numbers -->
                    <% 
                    const startPage = Math.max(1, pagination.currentPage - 2);
                    const endPage = Math.min(pagination.totalPages, pagination.currentPage + 2);
                    %>
                    
                    <% if (startPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="<%= pagination.firstUrl %>">1</a>
                        </li>
                        <% if (startPage > 2) { %>
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        <% } %>
                    <% } %>

                    <% for (let i = startPage; i <= endPage; i++) { %>
                        <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                            <% if (i === pagination.currentPage) { %>
                                <span class="page-link"><%= i %></span>
                            <% } else { %>
                                <% 
                                const pageUrl = i === 1 ? pagination.firstUrl : 
                                    `/isu-prioritas?page=${i}&${new URLSearchParams({
                                        ...(tanggalDari ? { tanggal_dari: tanggalDari } : {}),
                                        ...(tanggalSampai ? { tanggal_sampai: tanggalSampai } : {}),
                                        ...(judulSearch ? { judul: judulSearch } : {}),
                                        ...(uraianSearch ? { uraian: uraianSearch } : {}),
                                        ...(kewenanganFilter ? { kewenangan: kewenanganFilter } : {}),
                                        ...(stakeholderFilter ? { stakeholder: stakeholderFilter } : {}),
                                        ...(pagination.limit !== 10 ? { limit: pagination.limit } : {})
                                    }).toString()}`;
                                %>
                                <a class="page-link" href="<%= pageUrl.replace('&', '?').replace(/\?&/g, '?') %>"><%= i %></a>
                            <% } %>
                        </li>
                    <% } %>

                    <% if (endPage < pagination.totalPages) { %>
                        <% if (endPage < pagination.totalPages - 1) { %>
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        <% } %>
                        <li class="page-item">
                            <a class="page-link" href="<%= pagination.lastUrl %>"><%= pagination.totalPages %></a>
                        </li>
                    <% } %>

                    <!-- Next Button -->
                    <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                        <% if (pagination.hasNext && pagination.nextUrl) { %>
                            <a class="page-link" href="<%= pagination.nextUrl %>">
                                Selanjutnya <i class="bi bi-chevron-right"></i>
                            </a>
                        <% } else { %>
                            <span class="page-link text-muted">
                                Selanjutnya <i class="bi bi-chevron-right"></i>
                            </span>
                        <% } %>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <% } %>

</div>

<!-- Enhanced Filter Modal -->
<div class="modal fade" id="filterModal" tabindex="-1" aria-labelledby="filterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <form method="get" action="/isu-prioritas" id="filterForm">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="filterModalLabel">
                        <i class="bi bi-funnel-fill me-2"></i>Filter & Pencarian Data
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <!-- Filter berdasarkan Text -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-primary border-bottom pb-2 mb-3">
                                <i class="bi bi-search me-1"></i>Pencarian Berdasarkan Teks
                            </h6>
                        </div>
                        <div class="col-md-6">
                            <label for="judulSearch" class="form-label">
                                <i class="bi bi-card-heading me-1"></i>Cari di Judul
                            </label>
                            <input type="text" class="form-control" name="judul" id="judulSearch"
                                   value="<%= judulSearch || '' %>" 
                                   placeholder="Ketik kata kunci judul...">
                            <small class="form-text text-muted">Pencarian tidak case-sensitive</small>
                        </div>
                        <div class="col-md-6">
                            <label for="uraianSearch" class="form-label">
                                <i class="bi bi-file-text me-1"></i>Cari di Isi Laporan
                            </label>
                            <input type="text" class="form-control" name="uraian" id="uraianSearch"
                                   value="<%= uraianSearch || '' %>" 
                                   placeholder="Ketik kata kunci isi laporan...">
                            <small class="form-text text-muted">Pencarian di dalam konten laporan</small>
                        </div>
                    </div>

                    <!-- Filter berdasarkan Tanggal -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-success border-bottom pb-2 mb-3">
                                <i class="bi bi-calendar-range me-1"></i>Filter Berdasarkan Tanggal
                            </h6>
                        </div>
                        <div class="col-md-6">
                            <label for="tanggalDari" class="form-label">
                                <i class="bi bi-calendar3 me-1"></i>Tanggal Awal
                            </label>
                            <input type="date" class="form-control" name="tanggal_dari" id="tanggalDari"
                                   value="<%= tanggalDari || '' %>">
                        </div>
                        <div class="col-md-6">
                            <label for="tanggalSampai" class="form-label">
                                <i class="bi bi-calendar3 me-1"></i>Tanggal Akhir
                            </label>
                            <input type="date" class="form-control" name="tanggal_sampai" id="tanggalSampai"
                                   value="<%= tanggalSampai || '' %>">
                        </div>
                    </div>

                    <!-- Filter berdasarkan OPD -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-warning border-bottom pb-2 mb-3">
                                <i class="bi bi-buildings me-1"></i>Filter Berdasarkan OPD
                            </h6>
                        </div>
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="bi bi-building-gear me-1"></i>Filter Kewenangan
                                    <small class="text-muted">(Text Search)</small>
                                </label>
                                
                                <!-- Simple Text Search Input -->
                                <input type="text" class="form-control" name="kewenangan" id="kewenanganTextFilter"
                                    value="<%= kewenanganFilter || '' %>" 
                                    placeholder="Ketik kata kunci kewenangan untuk dicari...">
                                
                                <small class="form-text text-muted mt-1">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Pencarian akan mencari teks di dalam field kewenangan
                                </small>
                            </div>

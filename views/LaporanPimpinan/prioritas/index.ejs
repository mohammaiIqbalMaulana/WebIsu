                        <i class="bi bi-arrow-clockwise me-1"></i>Reset & Muat Ulang
                    </a>
                    <button type="submit" class="btn btn-primary" id="filterSubmitBtn">
                        <i class="bi bi-search me-1"></i>Terapkan Filter
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Files untuk multiple files -->
<% if (data && data.length > 0) { %>
    <% data.forEach((item) => { %>
        <% if (item.files && item.files.length > 1) { %>
        <div class="modal fade" id="filesModal<%= item.id %>" tabindex="-1" aria-labelledby="filesModalLabel<%= item.id %>" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header bg-info text-white">
                        <h5 class="modal-title">
                            <i class="bi bi-files me-2"></i>File Attachments
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <% item.files.forEach((file, fileIndex) => { %>
                            <div class="col-md-6 mb-3">
                                <div class="card h-100">
                                    <div class="card-body d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <%
                                            // Get file icon
                                            const ext = file.name.split('.').pop().toLowerCase();
                                            let icon = 'bi-file-earmark';
                                            let color = 'text-primary';
                                            
                                            if (['jpg', 'jpeg', 'png', 'gif', 'bmp', 'webp'].includes(ext)) {
                                                icon = 'bi-file-earmark-image'; color = 'text-success';
                                            } else if (ext === 'pdf') {
                                                icon = 'bi-file-earmark-pdf'; color = 'text-danger';
                                            } else if (['doc', 'docx'].includes(ext)) {
                                                icon = 'bi-file-earmark-word'; color = 'text-primary';
                                            } else if (['xls', 'xlsx'].includes(ext)) {
                                                icon = 'bi-file-earmark-excel'; color = 'text-success';
                                            } else if (['ppt', 'pptx'].includes(ext)) {
                                                icon = 'bi-file-earmark-ppt'; color = 'text-warning';
                                            } else if (['zip', 'rar', '7z'].includes(ext)) {
                                                icon = 'bi-file-earmark-zip'; color = 'text-info';
                                            }
                                            %>
                                            <i class="bi <%= icon %> <%= color %> me-2" style="font-size: 2rem;"></i>
                                            <div>
                                                <h6 class="mb-1"><%= file.name %></h6>
                                                <small class="text-muted">
                                                    <%= (file.size / 1024).toFixed(1) %> KB
                                                </small>
                                            </div>
                                        </div>
                                        <div class="d-flex gap-2 mt-4">
                                            <a href="/isu-prioritas/download/<%= item.id %>/<%= fileIndex %>" 
                                               class="btn btn-success btn-sm" title="Download">
                                                <i class="bi bi-download"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="/isu-prioritas/download-all/<%= item.id %>" class="btn btn-success">
                            <i class="bi bi-download me-1"></i>Download All (ZIP)
                        </a>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="bi bi-x-lg me-1"></i>Tutup
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    <% }) %>
<% } %>


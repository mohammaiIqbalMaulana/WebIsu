<script>
// Enhanced Filter System with OPD Support
class FilterOPDSelector {
    constructor(type) {
        this.type = type; // 'kewenangan' atau 'stakeholder'  
        this.selectedItems = new Map();
        this.opdData = [];
        
        this.searchInput = document.getElementById(`filter${type.charAt(0).toUpperCase() + type.slice(1)}Search`);
        this.dropdownMenu = document.getElementById(`filter${type.charAt(0).toUpperCase() + type.slice(1)}DropdownMenu`);
        this.badgesContainer = document.getElementById(`filter${type.charAt(0).toUpperCase() + type.slice(1)}Badges`);
        this.hiddenInput = document.getElementById(`filter${type.charAt(0).toUpperCase() + type.slice(1)}Hidden`);
        
        this.init();
    }

    init() {
        this.prePopulateFromHidden();
        this.loadOPDData();
        this.bindEvents();
    }

    prePopulateFromHidden() {
        const hiddenValue = this.hiddenInput.value;
        if (hiddenValue.trim()) {
            // Parse existing filter value and populate
            const ids = hiddenValue.split(',').map(id => parseInt(id.trim())).filter(id => !isNaN(id));
            // We'll populate the names after loading OPD data
            this.selectedIds = ids;
        }
    }

    async loadOPDData(search = '') {
        try {
            const response = await fetch(`/isu-prioritas/api/opd?search=${encodeURIComponent(search)}`);
            const result = await response.json();
            
            if (result.success) {
                this.opdData = result.data;
                
                // Populate selected items if we have selectedIds from hidden input
                if (this.selectedIds && this.selectedIds.length > 0) {
                    this.selectedIds.forEach(id => {
                        const opd = this.opdData.find(o => o.id === id);
                        if (opd) {
                            this.selectedItems.set(id, opd);
                        }
                    });
                    this.renderSelectedBadges();
                    delete this.selectedIds; // Clean up
                }
                
                this.renderDropdownItems();
            } else {
                this.showErrorInDropdown();
            }
        } catch (error) {
            console.error('Error loading OPD data:', error);
            this.showErrorInDropdown();
        }
    }

    renderDropdownItems() {
        if (this.opdData.length === 0) {
            this.dropdownMenu.innerHTML = '<li class="dropdown-item text-center text-muted">Tidak ada OPD ditemukan</li>';
            return;
        }

        const filteredData = this.opdData.filter(opd => !this.selectedItems.has(opd.id));
        
        if (filteredData.length === 0) {
            this.dropdownMenu.innerHTML = '<li class="dropdown-item text-center text-muted">Semua OPD sudah dipilih</li>';
            return;
        }

        this.dropdownMenu.innerHTML = '';
        
        filteredData.forEach(opd => {
            const li = document.createElement('li');
            li.innerHTML = `
                <a class="dropdown-item d-flex align-items-center" href="#" data-opd-id="${opd.id}">
                    <i class="bi bi-buildings me-2 text-primary"></i>
                    <span>${opd.nama_opd}</span>
                </a>
            `;
            
            li.querySelector('a').addEventListener('click', (e) => {
                e.preventDefault();
                this.selectItem(opd);
                this.searchInput.value = '';
                this.searchInput.blur();
            });
            
            this.dropdownMenu.appendChild(li);
        });
    }

    selectItem(opd) {
        this.selectedItems.set(opd.id, opd);
        this.renderSelectedBadges();
        this.updateHiddenInput();
        this.renderDropdownItems();
    }

    removeItem(opdId) {
        this.selectedItems.delete(opdId);
        this.renderSelectedBadges();
        this.updateHiddenInput();
        this.renderDropdownItems();
    }

    clearAll() {
        this.selectedItems.clear();
        this.renderSelectedBadges();
        this.updateHiddenInput();
        this.renderDropdownItems();
    }

    renderSelectedBadges() {
        this.badgesContainer.innerHTML = '';
        
        if (this.selectedItems.size === 0) {
            const emptyMsg = document.createElement('small');
            emptyMsg.className = 'text-muted';
            emptyMsg.innerHTML = `<i class="bi bi-info-circle me-1"></i>Belum ada filter ${this.type}`;
            this.badgesContainer.appendChild(emptyMsg);
            return;
        }

        this.selectedItems.forEach((opd) => {
            const badge = document.createElement('span');
            const badgeClass = this.type === 'kewenangan' ? 'bg-primary' : 'bg-success';
            const icon = this.type === 'kewenangan' ? 'bi-building-gear' : 'bi-people';

            badge.className = `badge ${badgeClass} fs-6 py-2 px-3`;
            badge.innerHTML = `
                <i class="bi ${icon} me-2"></i>
                ${opd.nama_opd}
                <button type="button" class="btn-close btn-close-white ms-2" 
                        style="font-size: 0.7rem; padding: 0;" 
                        title="Hapus ${opd.nama_opd}"></button>
            `;

            badge.querySelector('.btn-close').addEventListener('click', () => {
                this.removeItem(opd.id);
            });

            this.badgesContainer.appendChild(badge);
        });
    }

    updateHiddenInput() {
        const selectedIds = Array.from(this.selectedItems.keys());
        this.hiddenInput.value = selectedIds.join(',');
    }

    bindEvents() {
        let searchTimeout;
        this.searchInput.addEventListener('input', (e) => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                this.loadOPDData(e.target.value);
            }, 300);
        });

        this.searchInput.addEventListener('focus', () => {
            if (this.opdData.length === 0) {
                this.loadOPDData();
            }
        });

        this.dropdownMenu.addEventListener('click', (e) => {
            e.stopPropagation();
        });
    }

    showErrorInDropdown() {
        this.dropdownMenu.innerHTML = '<li class="dropdown-item text-center text-muted text-danger">Gagal memuat data OPD</li>';
    }
}

// Initialize Filter OPD Selectors
let filterKewenanganSelector, filterStakeholderSelector;

document.addEventListener('DOMContentLoaded', function() {
    filterStakeholderSelector = new FilterOPDSelector('stakeholder');

    // FIXED: Limit selector functionality
    initializeLimitSelector();
});

// FIXED: Proper limit selector implementation
function initializeLimitSelector() {
    const limitSelect = document.getElementById('limitSelect');
    if (limitSelect) {
        limitSelect.addEventListener('change', function() {
            const selectedLimit = parseInt(this.value);
            
            // Build current filter parameters
            const currentParams = new URLSearchParams();
            
            // Add existing filters
            const tanggalDari = '<%= tanggalDari %>';
            const tanggalSampai = '<%= tanggalSampai %>';
            const judulSearch = '<%= judulSearch %>';
            const uraianSearch = '<%= uraianSearch %>';
            const kewenanganFilter = '<%= kewenanganFilter %>';
            const stakeholderFilter = '<%= stakeholderFilter %>';
            
            if (tanggalDari) currentParams.append('tanggal_dari', tanggalDari);
            if (tanggalSampai) currentParams.append('tanggal_sampai', tanggalSampai);
            if (judulSearch) currentParams.append('judul', judulSearch);
            if (uraianSearch) currentParams.append('uraian', uraianSearch);
            if (kewenanganFilter) currentParams.append('kewenangan', kewenanganFilter);
            if (stakeholderFilter) currentParams.append('stakeholder', stakeholderFilter);
            
            // Add limit parameter
            if (selectedLimit !== 10) {
                currentParams.append('limit', selectedLimit);
            }

            // Calculate target page to maintain current record position
            const currentStartRecord = parseInt('<%= pagination.startRecord %>') || 1;
            const targetPage = Math.ceil(currentStartRecord / selectedLimit);
            
            if (targetPage > 1) {
                currentParams.append('page', targetPage);
            }

            // Navigate to new URL
            const newUrl = '/isu-prioritas' + (currentParams.toString() ? '?' + currentParams.toString() : '');
            showTableLoading();
            window.location.href = newUrl;
        });
    }
}

// Clear all filters function
function clearAllFilters() {
    // Clear text inputs
    document.getElementById('judulSearch').value = '';
    document.getElementById('uraianSearch').value = '';
    document.getElementById('tanggalDari').value = '';
    document.getElementById('tanggalSampai').value = '';
    document.getElementById('kewenanganTextFilter').value = '';
    
    // Clear OPD filters
    if (filterStakeholderSelector) filterStakeholderSelector.clearAll();
}

// Enhanced form submit
document.getElementById('filterForm').addEventListener('submit', function(e) {
    const submitBtn = document.getElementById('filterSubmitBtn');
    submitBtn.disabled = true;
    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Menerapkan Filter...';
    showTableLoading();
});

function showTableLoading() {
    const tableLoading = document.getElementById('tableLoading');
    const mainTable = document.getElementById('mainTable');
    if (tableLoading && mainTable) {
        tableLoading.style.display = 'block';
        tableLoading.style.height = mainTable.offsetHeight + 'px';
        mainTable.style.opacity = '0.5';
    }
}
</script>
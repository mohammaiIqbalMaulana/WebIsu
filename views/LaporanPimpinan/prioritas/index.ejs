                                <div id="filterStakeholderBadges" class="d-flex flex-wrap gap-2"></div>
                            </div>
                            <input type="hidden" name="stakeholder" id="filterStakeholderHidden" value="<%= stakeholderFilter || '' %>">
                        </div>
                    </div>
                    <!-- Info Alert -->
                    <div class="alert alert-light border-primary">
                        <i class="bi bi-info-circle me-2 text-primary"></i>
                        <strong>Tips:</strong> 

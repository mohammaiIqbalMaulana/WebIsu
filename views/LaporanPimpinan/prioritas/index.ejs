                            <label class="form-label">
                                <i class="bi bi-people me-1"></i>Filter Stakeholder
                            </label>
                            <!-- OPD Filter Component for Stakeholder -->
                            <div class="dropdown" id="filterStakeholderDropdown">
                                <input type="text" class="form-control dropdown-toggle" id="filterStakeholderSearch"
                                    placeholder="üîç Pilih OPD stakeholder untuk filter..." data-bs-toggle="dropdown"
                                    aria-expanded="false" autocomplete="off">
                                <ul class="dropdown-menu w-100" id="filterStakeholderDropdownMenu"
                                    style="max-height: 200px; overflow-y: auto;">
                                    <li class="dropdown-item text-center text-muted">
                                        <div class="spinner-border spinner-border-sm me-2"></div>
                                        Memuat data OPD...
                                    </li>
                                </ul>
                            </div>
